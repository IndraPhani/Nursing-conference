<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpeakerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/top_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/_10sdp"
        android:weightSum="2"
        android:layout_height="@dimen/_120sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:text="About Speaker"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/conferenceevent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:text="Let’s face it, memorizing a 45-minute presentation is not only overwhelming, but it is also nearly impossible. That is why presentation software platforms across the market have created a speaker’s view, including speaker notes, that allows you to see clues as to what you should be talking about and what’s coming next.
With this great tool, presenters have taken to including their outlines in this section only to discover the font is too small to read and too difficult to decipher on the fly. That is why we put together a few tips on what to include in your speaker notes section and how to leverage them in your next presentation."
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>